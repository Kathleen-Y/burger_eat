<h1>Burger</h1>

<div id='Name'>
  <h2>Burgers!</h2>

  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<div id='Set'>
  <h2>Eat burgers!</h2>

  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=fasle}}
    {{/if}}
    {{/each}}
  </ul>
</div>

<div id='Add'>
  <h2>Add a Burger</h2>

  <form class="create-devoured">

    <div class="form-group">
      <div id='input'>
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>
    </div>

    <div id='button'>
      <button type="submit">Submitt</button>
    </div>
  </form>
</div>